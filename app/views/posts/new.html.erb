<%= render partial: "header" %>

<div class = "container-new">
<%= form_for(@post) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title , placeholder: 'type a title', class:'form-control' %>
          </div>
            <div class="form-group form-group-file">
              <%= f.label :image, style:"cursor: pointer;" do%>
                <i class="far fa-file-image"></i>
                <%= f.file_field :image ,class: "file-select"%>
            <% end %>
            </div>
              <div class="form-group" >
                <%= f.text_area :body, placeholder: "text" , rows: "3", class:'form-control-text' %>
              </div>
                <%= f.submit "post", class: 'send-btn'%>
            <% end %>
</div>

<footer class="footer appear up">
          <div class="logo item">
            <span class="logo__stay">RE</span>
            <span class="logo__world">ISE</span>
          </div>
          <nav class="footer__nav">
            <ul class="footer__ul">
              <li class="footer__li item"><a href="#">Service</a></li>
              <li class="footer__li item"><a href="#">Contact</a></li>
              <li class="footer__li item"><a href="#">Company</a></li>
              <li class="footer__li item"><a href="#">Sitemap</a></li>
            </ul>
            <div class="footer__copyright item">
              &copy; REISE
            </div>
          </nav>
        </footer>